.messages__message
  .messages__message__upper-message
    .messages__message__upper-message__user-name
      = message.user.name
    .messages__message__upper-message__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
- if message.content.present?
  .messages__message__lower-meesage
    = message.content
= image_tag message.image.url, class: 'lower-message__image' if message.image.present?