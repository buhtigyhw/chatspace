.side-bar
  .side-bar__box
    .side-bar__box__name
      = current_user.name
    .side-bar__box__lists
      = link_to new_group_path,class: "side-bar__box__lists__icon" do
        =icon('fas','edit')
      = link_to edit_user_path(current_user),class: "side-bar__box__lists__icon" do
        =icon('fas','cog',class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

